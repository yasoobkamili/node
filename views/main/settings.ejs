        // Toggle privacy sections
        document.querySelectorAll('.privacy-header').forEach(header => {
            header.addEventListener('click', () => {
                const content = header.nextElementSibling;
                content.classList.toggle('active');

                const icon = header.querySelector('.fa-chevron-down');
                if (content.classList.contains('active')) {
                    icon.classList.remove('fa-chevron-down');
                    icon.classList.add('fa-chevron-up');
                } else {
                    icon.classList.remove('fa-chevron-up');
                    icon.classList.add('fa-chevron-down');
                }
            });
        });

        // Initialize first privacy section as open
        document.querySelector('.privacy-content').classList.add('active');
        document.querySelector('.privacy-header .fa-chevron-down').classList.replace('fa-chevron-down', 'fa-chevron-up');
